<tr>
<% person.visible_fields.each do |field| %>
  <td class="value"><%= person.send(field) %></td>
<% end %>
  <td class="value">
    <%= link_to edit_admin_person_path(person), class: "btn btn-xs btn-outline btn-success" do %>
    <i class="fas fa-pen"></i>
    <% end %>
    <%= link_to admin_person_path(person), class: "btn btn-xs btn-outline btn-danger",
      method: :delete, data:{confirm: "Do you want to delete?"} do %>
    <i class="fa fa-trash"></i>
    <% end %>
  </td>
</tr>