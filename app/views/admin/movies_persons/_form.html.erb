<%= form_for @movies_person, :url => (@movies_person.new_record? ? admin_movies_persons_path : admin_movies_person_path) do |f| %>
  <%= render "admin/shared/error_messages", object: f.object %>

  <h3 style="margin-top: 20px;">Create new movies_person</h3>
  <%= f.label :movie %>
  <%= f.select :movie_id, Movie.all.collect {|u| [u.name, u.id]}, {:include_blank => true}, {:class => "form-control"} %>

  <%= f.label :person %>
  <%= f.select :person_id, Person.all.collect {|u| [u.name, u.id]}, {:include_blank => true}, {:class => "form-control"} %>

  <div class="input-group action-button-group">
    <%= f.submit "Submit", class: "btn btn-primary" %>
    <%= f.button "Reset", class: "btn btn-default-btn", type: :reset %>
  </div>
<% end %>
