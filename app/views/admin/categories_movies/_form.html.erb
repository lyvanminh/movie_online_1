<%= form_for [:admin, @categories_movie], html: {multipart: true} do |f| %>
  <%= render "admin/shared/error_messages", object: f.object %>

  <%= f.label :movie %>
  <%= f.select :movie_id, Movie.all.collect {|u| [u.name, u.id]}, {:include_blank => true}, {:class => "form-control"} %>

  <%= f.label :category %>
  <%= f.select :category_id, Category.all.collect {|u| [u.title, u.id]}, {:include_blank => true}, {:class => "form-control"} %>

  <div class="input-group action-button-group">
    <%= f.submit "Submit", class: "btn btn-primary" %>
    <%= f.button "Reset", class: "btn btn-default-btn", type: :reset %>
  </div>
<% end %>
